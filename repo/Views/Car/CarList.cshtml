@model IEnumerable<repo.ViewModels.VM_Car>

@{
    ViewBag.Title = "CarList";
}

<h2>Lista wszystkich samochodów</h2>

<p>
    @Html.ActionLink("Dodaj nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Marka
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Model)
        </th>
        <th>
            Rok produkcji
        </th>
        <th>
            Data ostatniego przeglądu
        </th>
        <th>
            Samochód
        </th>
        <th>
            Pracownik
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearOfProduction)
            </td>
            <td>
                @{var date = item.Date.ToShortDateString();
                }
                @Html.DisplayFor(modelItem => date)
            </td>
            <td>
                @Html.ActionLink("Edytuj", "EditCar", new { id = item.Id }) |

                @Html.ActionLink("Usuń", "Delete", new { id = item.Id })
            </td>
            <td>
                @Html.DisplayFor(modelItem=>item.Workers.Name)
                @Html.DisplayFor(modelItem=>item.Workers.Surname)
                
            </td>
            <td>
                @Html.ActionLink("Zmień pracownika", "AddWorkerToCar", new { id = item.Id }) 
            </td>

        </tr>

    }

</table>
